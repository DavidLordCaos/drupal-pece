# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

ENV['VAGRANT_DEFAULT_PROVIDER'] = 'docker'

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.define "pece" do |a|
    a.vm.provider "docker" do |d|
      d.build_dir = "."
      d.ports = ["80:80"]
      d.name = "pece"
      d.has_ssh = true
    end
    a.vm.hostname = "pece.local"

    a.vm.synced_folder "../../../../", "/home/vagrant/pece"

    # If hostsupdater plugin is installed, add all servernames as aliases.
    if Vagrant.has_plugin?("vagrant-hostsupdater")
      a.hostsupdater.aliases = []
      a.hostsupdater.aliases.push(a.vm.hostname)
    end

    a.ssh.port = 22
    a.vm.provision "ansible" do |ansible|
      ansible.playbook = "../../playbook.yml"
      ansible.inventory_path = "inventory"
      # ansible.verbose = 'vvvv'
      #ansible.start_at_task = "Check if Drupal is booting."
    end
  end
end
